 <!-- Comments Start -->

 <div class=" container comment-form">
     <h4 class="mt-5">Leave a Reply</h4>
     <form method="post">
         <div class="row">
             <div class="col-md-6 form-group">
                 <input type="text" class="form-control" placeholder="Full Name" name="fname" value="">
             </div>
             <div class="col-md-6 form-group">
                 <input type="email" class="form-control" placeholder="Email Address" name="email" value="">
             </div>
             <div class="col-md-12 form-group">
                 <textarea class="form-control" placeholder="Type your comment..." name="comment" rows="7"></textarea>
             </div>
         </div>

         <button type="submit" class="btn-custom primary" name="button">Send <i class="fa fa-paper-plane" aria-hidden="true"></i> </button>
     </form>
 </div>
